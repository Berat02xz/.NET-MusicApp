@model MusicStore.Domain.Models.Artist

@{
    ViewData["Title"] = "Delete";
}

<div  class="container">
<h1 style="margin-bottom: 0; font-weight: 600; color: #E07A5F">Delete</h1>
<h3 style="margin-bottom: 0; font-weight: 600; color: #E07A5F">Are you sure you want to delete this?</h3>
<div>
   <div class="row artist-details" style="margin-top:1em; margin-bottom:1em">
            <div class="col-md-4 text-center" style="width: 20em;">
                <img src="@Model.ImageAvatarURL" alt="Artist Image" class="artist-image img-fluid" />
            </div>
            <div class="col-md-8">
                <h3>@Model.Name</h4>
                <p class="artist-description">@Model.Description</p>
                <dl class="row">
                    <dt class="col-sm-3">Country</dt>
                    <dd class="col-sm-9">@Model.Country</dd>
                    <dt class="col-sm-3">City</dt>
                    <dd class="col-sm-9">@Model.City</dd>
                    <dt class="col-sm-3">Genres</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Tags))
                        {
                            var tags = Model.Tags.Split(';');
                            foreach (var tag in tags)
                            {
                                <span class="tag">@tag.Trim()</span>
                            }
                        }
                        else
                        {
                            <span>No genres available</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary" style="display:block; margin-top:0.5em"> <i class="fa-solid fa-arrow-left"></i>Back to List</a>
    </form>
</div>
</div>
