@model List<MusicStore.Domain.RestaurantAppModels.Restaurant>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<h1 class="text-center my-5">Our Partner Restaurants</h1>

<div class="container">
    <div class="row">
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 border border-secondary rounded">
                    <img src="@restaurant.RestaurantImage" class="card-img-top" alt="@restaurant.Name" style="object-fit: cover; height: 220px;">
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                        <p class="card-text">@restaurant.Description</p>

                        <!-- Rating with stars -->
                        <div class="mb-2">
                            <strong>Rating:</strong>
                            @for (var i = 1; i <= 5; i++)
                            {
                                if (i <= @restaurant.Rating)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                        </div>

                        <!-- Contact Info with Icons -->
                        <div class="d-flex align-items-center mb-2">
                            <i class="fa-solid fa-phone me-2 text-primary"></i>
                            <p class="mb-0">@restaurant.Phone</p>
                        </div>

                        <div class="d-flex align-items-center mb-2">
                            <i class="fa-solid fa-clock me-2 text-primary"></i>
                            <p class="mb-0">@restaurant.OpeningHours</p>
                        </div>

                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-map-pin me-2 text-primary"></i>
                            <p class="mb-0">@restaurant.Address</p>
                        </div>

                        <!-- Menu Button -->
                        <a href="https://dinemaster.azurewebsites.net/Menues/ListMenusForRestaurant?restaurantId=@restaurant.Id" class="btn btn-primary mt-3">
                            View Menu
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        object-fit: cover;
        height: 220px;
    }
</style>
